<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoformularios"
    tools:context=".Gasolina">

    <TextView
        android:id="@+id/textView79"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GASOLINA"
        android:textColor="@color/amarillo"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006" />

    <Button
        android:id="@+id/btn_vista"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/miniboton_redondo"
        android:foreground="@android:drawable/ic_input_get"
        android:foregroundGravity="center"
        android:onClick="capturados"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView83"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Folio Vale:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etxt_folioGas"
                android:layout_width="209dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="0000"
                android:inputType="number"
                android:textAlignment="viewStart"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textColorLink="@color/verde"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView84"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="Fecha Ingreso:"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etxt_fechainiGas"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="dd / mm / aa"
                android:inputType="date"
                android:onClick="onClick"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textColorLink="@color/verde"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView85"
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Fecha Salida"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etxt_fechafinGas"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="dd / mm / aa"
                android:inputType="date"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textColorLink="@color/verde_azul"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Empresa:"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_empresaGas"
                android:layout_width="294dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:popupBackground="@drawable/spinner_style"
                android:textAlignment="center"
                android:textColor="@color/verde_azul" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView91"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Huerta:"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_huertaGas"
                android:layout_width="286dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:popupBackground="@drawable/spinner_style"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView49"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Bloques:"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtv_bloquesGas"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="Selecciona Bloques"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textColorLink="@color/verde_azul" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView90"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Activo:"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_activoGas"
                android:layout_width="289dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:popupBackground="@drawable/spinner_style"
                android:textAlignment="center"
                android:textColor="@color/verde_azul" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtv_responsableGas"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5sp"
                android:text="Responsable:"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_responsableGas"
                android:layout_width="286dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:popupBackground="@drawable/spinner_style"
                android:textAlignment="center"
                android:textColor="@color/verde_azul" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_actividadGas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView99"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Actividad:"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/atxt_actividadGas"
                android:layout_width="358dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Actividad"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textColorLink="@color/verde_azul"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtv_tipoComb"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tipo Combustible:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_tipoGas"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:popupBackground="@drawable/spinner_style"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_cantidadGas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView86"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Cantidad Ingreso:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etxt_cantidadiniGas"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:paddingLeft="10sp"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textColorLink="@color/verde"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10sp"
                android:text="lt"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView88"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cantidad Saldo:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etxt_cantidadsaldoGas"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:paddingLeft="10sp"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textColorLink="@color/verde_azul"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView89"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="lt"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView100"
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Observaciones:"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etxt_observacionesGas"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Observaciones"
                android:inputType="textPersonName"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textColorLink="@color/verde"
                android:textSize="14sp" />
        </LinearLayout>

        <TableRow
            android:id="@+id/tr_hrT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txtv_hrT"
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Horometro:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etxt_horometroGas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="00:00"
                android:inputType="time"
                android:paddingLeft="15sp"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textColorLink="@color/verde_azul"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView96"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hrs"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_kminiT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txtv_kminiT"
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Kilometraje Inicial:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etxt_kminiGas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:paddingLeft="10sp"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textColorLink="@color/verde"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Km"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_kmfinT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txtv_kmfinT"
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Kilometraje Final:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etxt_kmfinGas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="0.0 "
                android:inputType="numberDecimal"
                android:paddingLeft="10sp"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textColorLink="@color/verde_azul"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Km"
                android:textColor="@color/black" />
        </TableRow>


    </LinearLayout>


    <Button
        android:id="@+id/btn_agregarGas"
        android:layout_width="136dp"
        android:layout_height="36dp"
        android:background="@drawable/rounded_button"
        android:onClick="agregarDatos"
        android:text="AGREGAR"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="672dp" />


</androidx.constraintlayout.widget.ConstraintLayout>