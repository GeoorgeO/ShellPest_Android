<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Riego">

    <LinearLayout
        android:id="@+id/lyh_Principal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="date"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/sp_Empresa3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/sp_Hue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/sp_Blo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Lluvia:" />

            <EditText
                android:id="@+id/txt_Precipitacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Caudal Ini:" />

            <EditText
                android:id="@+id/txt_CaudalIni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="Caudal Fin:" />

            <EditText
                android:id="@+id/txt_CaudalFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="Horas Riego:" />

            <EditText
                android:id="@+id/txt_Riego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="Temperatura:" />

            <EditText
                android:id="@+id/txt_Temperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="ET:" />

            <EditText
                android:id="@+id/txt_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />

        </LinearLayout>



        <Button
            android:id="@+id/btn_Add"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:onClick="AddRenglon"
            android:text="Agregar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:text="Bloque"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/teal_700"
                android:text="Lluv."
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/teal_700"
                android:text="Cau.Ini"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/teal_700"
                android:text="Cau.Fin"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/teal_700"
                android:text="Hrs."
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/teal_700"
                android:text="Tem."
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/teal_700"
                android:text="ET"
                android:textAlignment="center" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_GridRiego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            tools:listitem="@layout/item_grid_riego">

        </ListView>

        <Button
            android:id="@+id/btn_Close"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:onClick="cerrar"
            android:text="Cerrar" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>