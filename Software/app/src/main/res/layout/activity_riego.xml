<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoformularios"
    tools:context=".Riego">

    <LinearLayout
        android:id="@+id/lyh_Principal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RIEGO"
            android:gravity="center"
            android:textColor="@color/amarillo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="Fecha"
            android:inputType="date"
            android:paddingLeft="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/verde_azul"
            android:textColorHighlight="@color/verde"
            android:textColorHint="@color/verde"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Empresa:"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_Empresa3"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:popupBackground="@drawable/spinner_style"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Huerta:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_Hue"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:popupBackground="@drawable/spinner_style"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bloque:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_Blo"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:popupBackground="@drawable/spinner_style"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Lluvia:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_Precipitacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="lluvia"
                android:inputType="numberDecimal"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Caudal Ini:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_CaudalIni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Inicial"
                android:inputType="numberDecimal"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="Caudal Fin:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_CaudalFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Final"
                android:inputType="numberDecimal"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="Horas Riego:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_Riego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Hrs"
                android:inputType="numberDecimal"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="Temperatura:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_Temperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Temp"
                android:inputType="numberDecimal"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="ET:"
                android:textAlignment="center"
                android:textColor="@color/cafe"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Estado"
                android:inputType="numberDecimal"
                android:textColor="@color/verde_azul"
                android:textColorHighlight="@color/verde"
                android:textColorHint="@color/verde"
                android:textSize="14sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_Add"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@color/verde_azul"
            android:onClick="AddRenglon"
            android:text="Agregar"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/verde"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bloque"
                android:textAlignment="center"
                android:textColor="@color/cafe" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Lluv."
                android:textAlignment="center"
                android:textColor="@color/cafe" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Cau.Ini"
                android:textAlignment="center"
                android:textColor="@color/cafe" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Cau.Fin"
                android:textAlignment="center"
                android:textColor="@color/cafe" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Hrs."
                android:textAlignment="center"
                android:textColor="@color/cafe" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Tem."
                android:textAlignment="center"
                android:textColor="@color/cafe" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="ET"
                android:textAlignment="center"
                android:textColor="@color/cafe" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_GridRiego"
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:layout_weight="50"
            tools:listitem="@layout/item_grid_riego">

        </ListView>

        <Button
            android:id="@+id/btn_Close"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@color/verde_azul"
            android:onClick="cerrar"
            android:text="Cerrar"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>