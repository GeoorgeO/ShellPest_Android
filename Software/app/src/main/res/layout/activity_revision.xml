<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Revision">

    <LinearLayout
        android:id="@+id/ll_ApliGeneral"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Revision Huerta"
            android:textColor="@color/amarillo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_ApliEncabezado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="Fecha:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cafe"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etd_Fecha2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:ems="10"
                    android:hint="Fecha"
                    android:inputType="date"
                    android:textColor="@color/verde_azul"
                    android:textColorHighlight="@color/verde"
                    android:textColorHint="@color/verde"
                    android:textColorLink="@color/verde_azul"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView57"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="Empresa:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cafe"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_Empresa5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:popupBackground="@drawable/spinner_style"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView58"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="Huerta:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cafe"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_huerta5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:popupBackground="@drawable/spinner_style"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView60"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="Bloque:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cafe"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_Blo2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:popupBackground="@drawable/spinner_style"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Floración:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cafe"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <RadioGroup android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_Fsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="@color/verde_azul"
                        android:textColorHighlight="@color/cafe"
                        android:textColorHint="@color/cafe"
                        android:textColorLink="@color/verde_azul"
                        android:textStyle="bold" />
                    <RadioButton
                        android:id="@+id/rb_Fno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="@color/verde_azul"
                        android:textColorHighlight="@color/cafe"
                        android:textColorHint="@color/cafe"
                        android:textColorLink="@color/verde_azul"
                        android:textStyle="bold" />
                </RadioGroup>
                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="N° Arboles:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cafe"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/etn_Narboles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:textColor="@color/verde_azul"
                    android:textColorHighlight="@color/verde"
                    android:textColorHint="@color/verde"
                    android:textColorLink="@color/verde_azul"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Fruta:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cafe"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <RadioGroup android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_Asi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="@color/verde_azul"
                        android:textColorHighlight="@color/cafe"
                        android:textColorHint="@color/cafe"
                        android:textColorLink="@color/verde_azul"
                        android:textStyle="bold" />
                    <RadioButton
                        android:id="@+id/rb_Ano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="@color/verde_azul"
                        android:textColorHighlight="@color/cafe"
                        android:textColorHint="@color/cafe"
                        android:textColorLink="@color/verde_azul"
                        android:textStyle="bold" />
                </RadioGroup>
                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="N. humedad:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cafe"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etn_Nhume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:hint="0.0"
                    android:inputType="numberDecimal"
                    android:textColor="@color/verde_azul"
                    android:textColorHighlight="@color/verde"
                    android:textColorHint="@color/verde"
                    android:textColorLink="@color/verde_azul"
                    android:textSize="14sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Observaciones:"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cafe"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pt_Observaciones"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/verde_azul"
                    android:textColorHighlight="@color/verde"
                    android:textColorHint="@color/verde"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_Agrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_button"
                android:onClick="InsertarRevision"
                android:text="Agregar"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/tv_tblq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="0.2"
                    android:background="@color/verde"
                    android:text="Bloque"
                    android:textAlignment="center"
                    android:textColor="@color/cafe"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_tflo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="0.2"
                    android:background="@color/verde"
                    android:text="Flor"
                    android:textAlignment="center"
                    android:textColor="@color/cafe"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_tnarb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="0.2"
                    android:background="@color/verde"
                    android:text="N.Arbol"
                    android:textAlignment="center"
                    android:textColor="@color/cafe"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_tfru"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="0.2"
                    android:background="@color/verde"
                    android:text="Fruta"
                    android:textAlignment="center"
                    android:textColor="@color/cafe"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_tnhum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="0.2"
                    android:background="@color/verde"
                    android:text="N.Hum"
                    android:textAlignment="center"
                    android:textColor="@color/cafe"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/lv_GridRevision"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            tools:listitem="@layout/item_grid_revision" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>